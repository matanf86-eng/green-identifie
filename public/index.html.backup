    <script>
        // Splash screen timer
        setTimeout(() => {
            document.getElementById('mainApp').style.display = 'flex';
        }, 3000);

        let stream = null;
        let capturedImageData = null;

        // Initialize camera
        async function initCamera() {
            try {
                stream = await navigator.mediaDevices.getUserMedia({ 
                    video: { 
                        facingMode: 'environment',
                        width: { ideal: 1280 },
                        height: { ideal: 960 }
                    } 
                });
                document.getElementById('video').srcObject = stream;
            } catch (error) {
                showError('×œ× × ×™×ª×Ÿ ×œ×’×©×ª ×œ××¦×œ××”. ×× × ×•×•×“××• ×©× ×ª×ª× ×”×¨×©××”.');
                console.error('Camera error:', error);
            }
        }

        // Capture photo
        function capturePhoto() {
            const video = document.getElementById('video');
            const canvas = document.getElementById('canvas');
            const context = canvas.getContext('2d');

            canvas.width = video.videoWidth;
            canvas.height = video.videoHeight;
            context.drawImage(video, 0, 0);

            return canvas.toDataURL('image/jpeg', 0.8);
        }

        // Capture and prepare for analysis
        function captureAndAnalyze() {
            capturedImageData = capturePhoto();
            
            // Show preview
            document.getElementById('preview').src = capturedImageData;
            document.getElementById('cameraView').style.display = 'none';
            document.getElementById('photoView').style.display = 'block';
            
            // Stop camera
            if (stream) {
                stream.getTracks().forEach(track => track.stop());
            }
        }

        // Analyze image with Claude AI
        async function analyzeImage() {
            const base64Data = capturedImageData.split(',')[1];
            
            document.getElementById('loading').classList.add('show');
            document.getElementById('error').classList.remove('show');
            
            try {
                const response = await fetch('/api/analyze', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({
                        image: base64Data
                    })
                });

                if (!response.ok) {
                    const error = await response.json();
                    throw new Error(error.error || '×©×’×™××” ×‘×—×™×‘×•×¨ ×œ×©×¨×ª');
                }

                const result = await response.json();
                displayResult(result);
                
            } catch (error) {
                console.error('Analysis error:', error);
                showError(error.message || '××•×¤×¡! ××©×”×• ×”×©×ª×‘×© ×‘×–×™×”×•×™. × ×¡×” ×©×•×‘.');
            } finally {
                document.getElementById('loading').classList.remove('show');
            }
        }

        // Display result
        function displayResult(result) {
            document.getElementById('photoView').style.display = 'none';
            
            const icons = {
                '×›×•×¡×‘×¨×”': 'ğŸŒ¿',
                '×¤×˜×¨×•×–×™×œ×™×”': 'ğŸŒ±',
                '×œ× ×‘×¨×•×¨': 'ğŸ¤”'
            };
            
            const colors = {
                '×›×•×¡×‘×¨×”': '#10b981',
                '×¤×˜×¨×•×–×™×œ×™×”': '#3b82f6',
                '×œ× ×‘×¨×•×¨': '#f59e0b'
            };
            
            document.getElementById('resultIcon').textContent = icons[result.plant] || 'ğŸŒ¿';
            document.getElementById('resultTitle').textContent = result.plant;
            document.getElementById('resultTitle').style.color = colors[result.plant] || '#1f2937';
            document.getElementById('resultDescription').textContent = result.explanation;
            
            if (result.distinguishing_features) {
                document.getElementById('resultDescription').textContent += '\n\n' + result.distinguishing_features;
            }
            
            document.getElementById('confidence').textContent = `×¨××ª ×‘×™×˜×—×•×Ÿ: ${result.confidence}%`;
            document.getElementById('result').classList.add('show');
        }

        // Show error
        function showError(message) {
            const errorEl = document.getElementById('error');
            errorEl.textContent = message;
            errorEl.classList.add('show');
        }

        // Retake photo
        function retakePhoto() {
            document.getElementById('photoView').style.display = 'none';
            document.getElementById('cameraView').style.display = 'block';
            document.getElementById('error').classList.remove('show');
            initCamera();
        }

        // Reset
        function reset() {
            document.getElementById('result').classList.remove('show');
            document.getElementById('photoView').style.display = 'none';
            document.getElementById('cameraView').style.display = 'block';
            document.getElementById('error').classList.remove('show');
            capturedImageData = null;
            initCamera();
        }

        // Initialize on load
        window.addEventListener('load', initCamera);
    </script>
